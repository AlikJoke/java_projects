package Searchs;

/**
 * 	¬ св€зи с малой эффективностью по сравнению с другими алгоритмами линейный поиск обычно используют только если отрезок 
 * 	поиска содержит очень мало элементов, линейный поиск не требует дополнительной пам€ти или обработки
 * 	функции, так что может работать в потоковом режиме при непосредственном получении данных из любого источника. “ак же, 
 * 	линейный поиск часто используетс€ в виде линейных алгоритмов поиска максимума/минимума.
 * 
 *	¬ычислительна€ сложность алгоритма -  O(n);
 */

public class LinearSearch {

	public void search(int[] a, int key) {
		
		for(int i = 0; i < a.length; i ++) {
			
			if(a[i] == key) {
				
				System.out.println("Index of " + key + "in massive a[] is " + i);
			}	else {
				
				System.out.println(-1);
			}
		}
	}
}
